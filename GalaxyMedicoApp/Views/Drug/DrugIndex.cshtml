@model IEnumerable<GalaxyMedicoApp.Models.DrugDto>

    <br />
    <br />
    <div class="container p-4 border">
        <div class="row pb-2">
            <div class="col">
                <h1 class="text-primary">Medicine List</h1>
            </div>
            <div class="col text-end pt-1">
                <a asp-action="CreateDrug" class="btn btn-outline-primary"><i class="fas fa-plus"></i>Add New Medicine</a>
            </div>
        </div>
        <table class="table">
         <thead>
             <tr>
                 <th>
                     Name
                 </th>
                 <th>
                     Category Name
                 </th>
                 <th>
                     Price
                 </th>
                 <th>
                     
                 </th>
             </tr>
         </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.CategoryName
                    </td>
                    <td>
                        @(item.Price.ToString("c"))
                    </td>
                    <td>
                        <a asp-action="EditDrug" class="btn btn-success" asp-route-drugId="@item.DrugId">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="DeleteDrug" class="btn btn-danger" asp-route-drugId="@item.DrugId">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
